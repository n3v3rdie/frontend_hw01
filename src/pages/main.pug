mixin product-item(product)
    .product-item(itemscope itemtype="http://schema.org/Product" style= product.custom_css)
        .product-img
            if product.main_color == 'blue'
                 img(itemprop="image" src= product.img, alt="item-preview" class='product-shadow-blue')
            else if product.main_color == 'red'
                img(itemprop="image" src= product.img, alt="item-preview" class='product-shadow-red')
            else   
                img(itemprop="image" src= product.img, alt="item-preview" class='product-shadow-green')
            end
        .product-title(itemprop="name")= product.title
        .product-author= product.author 
            .product-last-line
                .product-size(itemprop="size")= product.size
                .product-price(itemprop="price")= product.price

main
    h2 Популярное
    h3.mb20 Нестареющая классика и бестселлеры 
    .products-slider-wrapper
        .products-slider
            for product in productList
                +product-item(product)
